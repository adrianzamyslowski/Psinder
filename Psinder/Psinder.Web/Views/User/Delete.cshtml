    @model Psinder.Web.Models.User.UserDeleteModelView

@{
    ViewData["Title"] = "Delete";
}

<h1>Usunięcie użytkownika</h1>

<div>
       <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="UserName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Email"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            <label asp-for="DateOfBirth"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfBirth.Date.ToString("d")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input asp-for="UserName" class="form-control" hidden/>
        <input asp-for="Email" class="form-control" hidden/>
        <div class="form-group">
            <label asp-for="PasswordConfirm"></label>
            <input asp-for="PasswordConfirm" class="form-control" />
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>
        <div>
            <input class="btn btn-danger" type="submit" value="Usunięcie konta" />
        </div>
    </form>
        <div>
            <div>
                <a asp-action="Details">Anuluj</a>
            </div>
            <div>
                <a asp-action="Index" asp-controller="Home">Ekran głowny</a>
            </div>
        </div>  
</div>