@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Psinder.Web.Models.User.PasswordChangeModelView


@{
    ViewData["Title"] = "Zmiana hasła";
}

<h1>Zmiana hasła</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserName" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="CurrentPassword" class="control-label"></label>
                <input asp-for="CurrentPassword" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zmiana hasła" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <div>
                <a type="button" class="gbtn gbtn-action" asp-action="Details">Anuluj</a>
            </div>
            <div>
                <a asp-action="Index" asp-controller="Home">Ekran głowny</a>
            </div>
        </div>
    </div>
</div>


